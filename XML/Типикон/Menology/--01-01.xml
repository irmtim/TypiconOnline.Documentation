<?xml version="1.0" encoding="UTF-8"?>
<rule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Rules/RulesSchema.xsd">
	<if>
		<expression>
			<!--Если воскресенье, то составляем правило особым образом.
				В будущем, надо вынести все в отдельное общее правило CommonRule.-->
			<equals>
				<getdayofweek>
					<date/>
				</getdayofweek>
				<getdayofweek name="воскресенье"/>
			</equals>
		</expression>
		<then>
			<worship time="16.00" isdaybefore="true">
				<name>
					<item language="cs-ru">Всенощное бдение.</item>
				</name>
			</worship>
			<worship time="23.40" isdaybefore="true">
				<name>
					<item language="cs-ru">Часы 3-й и 6-й.</item>
				</name>
			</worship>
			<worship time="00.00">
				<name>
					<item language="cs-ru">Божественная литургия.</item>
				</name>
			</worship>
		</then>
		<else>
			<worship time="16.00" isdaybefore="true">
				<name>
					<item language="cs-ru">Вечернее богослужение.</item>
				</name>
			</worship>
			<worship time="23.40" isdaybefore="true">
				<name>
					<item language="cs-ru">Часы 3-й и 6-й.</item>
				</name>
			</worship>
			<worship time="00.00">
				<name>
					<item language="cs-ru">Божественная литургия.</item>
				</name>
			</worship>
		</else>
	</if>
</rule>
