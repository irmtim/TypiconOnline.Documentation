<?xml version="1.0" encoding="UTF-8"?>
<rule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file:///E:/Programming/Documentation/TypiconOnline.Documentation/XML/Rules/RulesSchema.xsd">
	<switch>
		<expression>
			<getdayofweek>
				<date>--01-07</date>
			</getdayofweek>
		</expression>
		<case>
			<values>
				<getdayofweek name="понедельник"/>
			</values>
			<action>
				<service time="17.30" name="9-й час. Вечерня. малое повечерие." isdaybefore="true"/>
				<service time="06.00" name="Полунощница. Утреня."/>
				<service time="08.00" name="Великие Часы. Изобразительны. "/>
				<notice name="Божественная литургия не совершается."/>
			</action>
		</case>
		<default>
			<service time="17.30" name="9-й час. Вечерня. Малое повечерие." isdaybefore="true"/>
			<service time="06.00" name="Полуношница. Утреня. Часы."/>
			<service time="08.00" name="Божественная литургия."/>
		</default>
	</switch>
</rule>
