<?xml version="1.0" encoding="UTF-8"?>
<rule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file:///C:/Users/%d0%9c%d0%be%d0%bd%d0%b0%d1%81%d1%82%d1%8b%d1%80%d1%8c/Documents/programming/XML/Rules/RulesSchema.xsd">
	<switch>
		<expression>
			<daysfromeaster><date>--03-08</date></daysfromeaster>
		</expression>
		<!-- В Неделю сыропустную или мясопустную-->
		<case>
			<values>
					<int>-48</int>
					<int>-47</int>
					<int>-46</int>
					<int>-45</int>					
					<int>-44</int>					
					<int>-43</int>					
			</values>
			<action>
				<modifyday><datebydaysfromeaster><int>-43</int></datebydaysfromeaster></modifyday>
				<service time="17.30" name="Великое повечерие." isdaybefore="true"/>
				<service time="06.00" name="Полунощница. Утреня. Часы."></service>
				<service time="08.00" name="Божественная литургия."></service>
			</action>
		</case>
		
		<default>
			<modifyday daymove="0" priority="3"/>
			<service time="17.30" name="Великое повечерие." isdaybefore="true"/>
			<service time="06.00" name="Полунощница. Утреня. Часы."></service>
			<service time="09.00" name="Литургия Преждеосвященных Даров."></service>
		</default>
	</switch>
</rule>
