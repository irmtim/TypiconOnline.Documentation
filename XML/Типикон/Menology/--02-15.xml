<?xml version="1.0" encoding="UTF-8"?>
<rule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Rules/RulesSchema.xsd">
	<if>
		<expression>
			<less>
				<daysfromeaster>
					<date>--02-15</date>
				</daysfromeaster>
				<int>-70</int>
			</less>
		</expression>
		<then>
			<!-- Обычное бдение с литией-->
			<worship time="16.00" isdaybefore="true">
				<name>
					<item language="cs-ru">Всенощное бдение.</item>
				</name>
			</worship>
			<worship time="08.40">
				<name>
					<item language="cs-ru">Часы 3-й и 6-й.</item>
				</name>
			</worship>
			<worship time="09.00">
				<name>
					<item language="cs-ru">Божественная литургия.</item>
				</name>
			</worship>
		</then>
		<else>
			<switch>
				<expression>
					<daysfromeaster>
						<date>--02-15</date>
					</daysfromeaster>
				</expression>
				<!-- Соединение с воскресной службой -->
				<case>
					<values>
						<int>-70</int>
						<int>-63</int>
						<int>-56</int>
						<int>-49</int>
					</values>
					<action>
						<worship time="16.00" isdaybefore="true">
							<name>
								<item language="cs-ru">Всенощное бдение.</item>
							</name>
						</worship>
						<worship time="08.40">
							<name>
								<item language="cs-ru">Часы 3-й и 6-й.</item>
							</name>
						</worship>
						<worship time="09.00">
							<name>
								<item language="cs-ru">Божественная литургия.</item>
							</name>
						</worship>
					</action>
				</case>
				<!-- Служба праздника совершается в этот день.
					  Перенос заупокойной службы на субботу предыдущую -->
				<case>
					<values>
						<int>-57</int>
					</values>
					<action>
						<modifyday daymove="0">
							<modifyreplacedday kind="triodion" daymove="-7"/>
						</modifyday>
						<worship time="16.00" isdaybefore="true">
							<name>
								<item language="cs-ru">Всенощное бдение.</item>
							</name>
						</worship>
						<worship time="08.40">
							<name>
								<item language="cs-ru">Часы 3-й и 6-й.</item>
							</name>
						</worship>
						<worship time="09.00">
							<name>
								<item language="cs-ru">Божественная литургия.</item>
							</name>
						</worship>
					</action>
				</case>
				<!-- Служба праздника совершается в этот день.
						Триодь опускается.-->
				<case>
					<values>
						<int>-55</int>
						<int>-54</int>
						<int>-52</int>
					</values>
					<action>
						<worship time="16.00" isdaybefore="true">
							<name>
								<item language="cs-ru">Всенощное бдение.</item>
							</name>
						</worship>
						<worship time="08.40">
							<name>
								<item language="cs-ru">Часы 3-й и 6-й.</item>
							</name>
						</worship>
						<worship time="09.00">
							<name>
								<item language="cs-ru">Божественная литургия.</item>
							</name>
						</worship>
					</action>
				</case>
				<case>
					<values>
						<int>-53</int>
						<int>-51</int>
					</values>
					<action>
						<worship time="16.00" isdaybefore="true">
							<name>
								<item language="cs-ru">Всенощное бдение.</item>
							</name>
						</worship>
						<worship time="08.40">
							<name>
								<item language="cs-ru">Часы 3-й и 6-й.</item>
							</name>
						</worship>
						<worship time="09.00">
							<name>
								<item language="cs-ru">Божественная литургия.</item>
							</name>
						</worship>
					</action>
				</case>
				<!-- Служба праздника совершается в этот день в соединении со службой Триоди.-->
				<case>
					<values>
						<int>-50</int>
					</values>
					<action>
						<modifyday daymove="0" priority="4"/>
						<worship time="16.00" isdaybefore="true">
							<name>
								<item language="cs-ru">Всенощное бдение.</item>
							</name>
						</worship>
						<worship time="08.40">
							<name>
								<item language="cs-ru">Часы 3-й и 6-й.</item>
							</name>
						</worship>
						<worship time="09.00">
							<name>
								<item language="cs-ru">Божественная литургия.</item>
							</name>
						</worship>
					</action>
				</case>
				<!-- Служба праздника совершается в этот день в соединении со службой Триоди.-->
				<case>
					<values>
						<int>-48</int>
					</values>
					<action>
						<modifyday daymove="0" priority="3"/>
						<worship time="16.00" isdaybefore="true">
							<name>
								<item language="cs-ru">Всенощное бдение.</item>
							</name>
						</worship>
						<worship time="08.40">
							<name>
								<item language="cs-ru">Часы 3-й и 6-й.</item>
							</name>
						</worship>
						<worship time="09.00">
							<name>
								<item language="cs-ru">Божественная литургия.</item>
							</name>
						</worship>
					</action>
				</case>
			</switch>
		</else>
	</if>
</rule>
