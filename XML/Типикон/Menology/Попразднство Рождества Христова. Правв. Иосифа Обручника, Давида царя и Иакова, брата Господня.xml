<?xml version="1.0" encoding="UTF-8"?>
<rule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file:///C:/Users/%d0%9c%d0%be%d0%bd%d0%b0%d1%81%d1%82%d1%8b%d1%80%d1%8c/Documents/programming/XML/Rules/RulesSchema.xsd">
	<switch>
		<expression>
			<getdayofweek><date>--01-07</date></getdayofweek>
		</expression>
		<case>
			<values>
					<getdayofweek name="воскресенье"></getdayofweek>
			</values>
			<action>
				<modifyday><date>--01-08</date></modifyday>
				<service time="17.30" name="9-й час. Великая вечерня. Малое повечерие." isdaybefore="true"/>
				<service time="06.00" name="Полуношница. Утреня. Часы."></service>
				<service time="08.00" name="Божественная литургия."></service>
			</action>
		</case>
		<case>
			<values>
					<getdayofweek name="суббота"></getdayofweek>
			</values>
			<action>
				<modifyday asaddition="true" usefullname="true"><date>--01-08</date></modifyday>
				<service time="16.00" name="Всенощное бдение." isdaybefore="true"/>
				<service time="08.40" name="Часы 3-й и 6-й."></service>
				<service time="09.00" name="Божественная литургия."></service>
			</action>
		</case>
		<default>
			<modifyday shortname="по Рождестве Христовом" usefullname="true">
				<getclosestday dayofweek="воскресенье" weekcount="1"><date>--01-07</date></getclosestday>
			</modifyday>
			<service time="16.00" name="Всенощное бдение." isdaybefore="true"/>
			<service time="08.40" name="Часы 3-й и 6-й."></service>
			<service time="09.00" name="Божественная литургия."></service>
		</default>
	</switch>
</rule>
