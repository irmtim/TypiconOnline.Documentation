<?xml version="1.0" encoding="UTF-8"?>
<rule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Rules/RulesSchema.xsd">
	<switch>
		<expression>
			<getdayofweek>
				<date>--01-07</date>
			</getdayofweek>
		</expression>
		<case>
			<values>
				<getdayofweek name="воскресенье"/>
			</values>
			<action>
				<worship time="17.30" isdaybefore="true">
					<name>
						<item language="cs-ru">9-й час. Великая вечерня. Малое повечерие.</item>
					</name>
				</worship>
				<worship time="06.00">
					<name>
						<item language="cs-ru">Полуношница. Утреня. Часы.</item>
					</name>
				</worship>
				<worship time="08.00">
					<name>
						<item language="cs-ru">Божественная литургия.</item>
					</name>
				</worship>
			</action>
		</case>
		<case>
			<values>
				<getdayofweek name="суббота"/>
			</values>
			<action>
				<worship time="16.00" isdaybefore="true">
					<name>
						<item language="cs-ru">Всенощное бдение.</item>
					</name>
				</worship>
				<worship time="08.40">
					<name>
						<item language="cs-ru">Часы 3-й и 6-й.</item>
					</name>
				</worship>
				<worship time="09.00">
					<name>
						<item language="cs-ru">Божественная литургия.</item>
					</name>
				</worship>
			</action>
		</case>
		<default>
			<worship time="16.00" isdaybefore="true">
				<name>
					<item language="cs-ru">Всенощное бдение.</item>
				</name>
			</worship>
			<worship time="08.40">
				<name>
					<item language="cs-ru">Часы 3-й и 6-й.</item>
				</name>
			</worship>
			<worship time="09.00">
				<name>
					<item language="cs-ru">Божественная литургия.</item>
				</name>
			</worship>
		</default>
	</switch>
</rule>
