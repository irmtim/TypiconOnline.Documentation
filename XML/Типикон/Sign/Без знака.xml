						<!-- между Великим и Успенским-->
						<and>
							<more>
								<date/>
								<datebydaysfromeaster>
									<int>7</int>
								</datebydaysfromeaster>
							</more>
							<less>
								<date/>
								<date>--08-14</date>
							</less>
						</and>
						<!-- между Новым годом и Великим постом-->
						<lessequals>
							<date/>
							<datebydaysfromeaster>
								<int>-49</int>
							</datebydaysfromeaster>
						</lessequals>
						<!-- между Успенским постом и Новым годом-->
						<more>
							<date/>
							<date>--08-28</date>
						</more>
					</or>
				</expression>
				<then>
					<!-- Если четверг, добавляем молебен свт. Николаю Чудотворцу-->
					<switch>
						<expression>
							<getdayofweek>
								<date/>
							</getdayofweek>
						</expression>
						<case>
							<values>
								<getdayofweek name="четверг"/>
							</values>
							<action>
								<worship id="moleben">
									<name>
										<item language="cs-ru">Молебен свт. Николаю Чудотворцу.</item>
									</name>
								</worship>
							</action>
						</case>
						<!-- Если пятница, Молебен перед иконой Божией Матери "Неупиваемая чаша"-->
						<case>
							<values>
								<getdayofweek name="пятница"/>
							</values>
							<action>
								<worship id="moleben">
									<name>
										<item language="cs-ru">Молебен перед иконой Божией Матери "Неупиваемая чаша".</item>
									</name>
								</worship>
							</action>
						</case>
						<!-- Если суббота и дата позже Недели Всех Святых (63), Молебен перед иконой "Лобзание Иисуса Христа Иудою".-->
						<case>
							<values>
								<getdayofweek name="суббота"/>
							</values>
							<action>
								<if>
									<expression>
										<or>
											<lessequals>
												<date/>
												<datebydaysfromeaster>
													<int>-49</int>
												</datebydaysfromeaster>
											</lessequals>
											<more>
												<date/>
												<datebydaysfromeaster>
													<int>63</int>
												</datebydaysfromeaster>
											</more>
										</or>
									</expression>
									<then>
										<worship id="moleben">
											<name>
												<item language="cs-ru">Молебен перед иконой "Лобзание Иисуса Христа Иудою".</item>
											</name>
										</worship>
									</then>
								</if>
							</action>
						</case>
					</switch>
				</then>
			</if>
		</else>
	</if>
</rule>
