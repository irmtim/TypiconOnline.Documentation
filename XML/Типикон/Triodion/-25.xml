<?xml version="1.0" encoding="UTF-8"?>
<rule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Rules/RulesSchema.xsd">
	<switch>
		<expression>
			<daysfromeaster>
				<date>--04-07</date>
			</daysfromeaster>
		</expression>
		<case>
			<values>
				<int>-25</int>
			</values>
			<action>
				<worship time="17.30" mode="daybefore">
					<name>9-й час.  Вечерня. Малое повечерие.</name>
				</worship>
				<worship time="06.00">
					<name>Полунощница. Утреня.</name>
				</worship>
				<worship time="08.00">
					<name>Часы. Изобразительны. Вечерня.</name>
				</worship>
			</action>
		</case>
		<default>
			<worship time="17.30" mode="daybefore">
				<name>Великое повечерие.</name>
			</worship>
			<worship time="06.00">
				<name>Полунощница. Утреня. Часы.</name>
			</worship>
			<worship time="09.00">
				<name>Литургия Преждеосвященных Даров.</name>
			</worship>
		</default>
	</switch>
</rule>
