<?xml version="1.0" encoding="UTF-8"?>
<rule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file:///E:/Programming/Documentation/TypiconOnline.Documentation/XML/Rules/RulesSchema.xsd">
	<!-- если день - вне дней Великого поста, а также Петрова, Успенского и Рождественского-->
	<if>
		<expression>
			<or>
				<!-- между Великим и Успенским-->
				<and>
					<more>
						<date/>
						<datebydaysfromeaster>
							<int>7</int>
						</datebydaysfromeaster>
					</more>
					<less>
						<date/>
						<date>--08-14</date>
					</less>
				</and>
				<!-- между Новым годом и Великим постом-->
				<lessequals>
					<date/>
					<datebydaysfromeaster>
						<int>-49</int>
					</datebydaysfromeaster>
				</lessequals>
				<!-- между Успенским постом и Новым годом-->
				<more>
					<date/>
					<date>--08-28</date>
				</more>
			</or>
		</expression>
		<then>
			<!-- Если четверг, добавляем молебен свт. Николаю Чудотворцу-->
			<switch>
				<expression>
					<getdayofweek>
						<date/>
					</getdayofweek>
				</expression>
				<case>
					<values>
						<getdayofweek name="четверг"/>
					</values>
					<action>
						<worship id="moleben">
							<name>Молебен свт. Николаю Чудотворцу.</name>
						</worship>
					</action>
				</case>
				<!-- Если пятница, Молебен перед иконой Божией Матери "Неупиваемая чаша"-->
				<case>
					<values>
						<getdayofweek name="пятница"/>
					</values>
					<action>
						<worship id="moleben">
							<name>Молебен перед иконой Божией Матери "Неупиваемая чаша".</name>
						</worship>
					</action>
				</case>
				<!-- Если суббота и дата позже Недели Всех Святых (63), Молебен перед иконой "Лобзание Иисуса Христа Иудою".-->
				<case>
					<values>
						<getdayofweek name="суббота"/>
					</values>
					<action>
						<if>
							<expression>
								<or>
									<lessequals>
										<date/>
										<datebydaysfromeaster>
											<int>-49</int>
										</datebydaysfromeaster>
									</lessequals>
									<more>
										<date/>
										<datebydaysfromeaster>
											<int>63</int>
										</datebydaysfromeaster>
									</more>
								</or>
							</expression>
							<then>
								<worship id="moleben">
									<name>Молебен перед иконой "Лобзание Иисуса Христа Иудою".</name>
								</worship>
							</then>
						</if>
					</action>
				</case>
				<case>
					<values>
						<getdayofweek name="воскресенье"/>
					</values>
					<action>
						<!-- Если это первое воскресенье месяца-->
						<if>
							<expression>
								<or>
									<equals>
										<getclosestday dayofweek="воскресенье" weekcount="1">
											<date>--12-31</date>
										</getclosestday>
										<date/>
									</equals>
									<equals>
										<getclosestday dayofweek="воскресенье" weekcount="1">
											<date>--01-31</date>
										</getclosestday>
										<date/>
									</equals>
									<equals>
										<getclosestday dayofweek="воскресенье" weekcount="1">
											<date>--02-28</date>
										</getclosestday>
										<date/>
									</equals>
									<equals>
										<getclosestday dayofweek="воскресенье" weekcount="1">
											<date>--03-31</date>
										</getclosestday>
										<date/>
									</equals>
									<equals>
										<getclosestday dayofweek="воскресенье" weekcount="1">
											<date>--04-30</date>
										</getclosestday>
										<date/>
									</equals>
									<equals>
										<getclosestday dayofweek="воскресенье" weekcount="1">
											<date>--05-31</date>
										</getclosestday>
										<date/>
									</equals>
									<equals>
										<getclosestday dayofweek="воскресенье" weekcount="1">
											<date>--06-30</date>
										</getclosestday>
										<date/>
									</equals>
									<equals>
										<getclosestday dayofweek="воскресенье" weekcount="1">
											<date>--07-31</date>
										</getclosestday>
										<date/>
									</equals>
									<equals>
										<getclosestday dayofweek="воскресенье" weekcount="1">
											<date>--08-31</date>
										</getclosestday>
										<date/>
									</equals>
									<equals>
										<getclosestday dayofweek="воскресенье" weekcount="1">
											<date>--09-30</date>
										</getclosestday>
										<date/>
									</equals>
									<equals>
										<getclosestday dayofweek="воскресенье" weekcount="1">
											<date>--10-31</date>
										</getclosestday>
										<date/>
									</equals>
									<equals>
										<getclosestday dayofweek="воскресенье" weekcount="1">
											<date>--11-30</date>
										</getclosestday>
										<date/>
									</equals>
								</or>
							</expression>
							<then>
								<worship id="moleben">
									<name>Молебен перед иконой Божией Матери "Всецарица". Лития по усопшим.</name>
								</worship>
							</then>
							<else>
								<worship id="moleben">
									<name>Общий молебен. Лития по усопшим.</name>
								</worship>
							</else>
						</if>
					</action>
				</case>
			</switch>
		</then>
	</if>
</rule>
