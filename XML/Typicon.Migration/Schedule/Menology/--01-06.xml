<?xml version="1.0" encoding="UTF-8"?>
<rule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Rules/RulesSchema.xsd">
	<switch>
		<expression>
			<getdayofweek>
				<date>--01-07</date>
			</getdayofweek>
		</expression>
		<case>
			<values>
				<getdayofweek name="воскресенье"/>
			</values>
			<action>
				<worship time="16.00" mode="daybefore">
					<name>Вечерня. Утреня. Час 1-й.</name>
				</worship>
				<worship time="07.40">
					<name>Часы 3-й и 6-й.</name>
				</worship>
				<worship time="08.00">
					<name>Божественная литургия. 9-й час. Великая вечерня.</name>
				</worship>
			</action>
		</case>
		<case>
			<values>
				<getdayofweek name="понедельник"/>
			</values>
			<action>
				<worship time="16.00" mode="daybefore">
					<name>Всенощное бдение.</name>
				</worship>
				<worship time="08.40">
					<name>Часы 3-й и 6-й.</name>
				</worship>
				<worship time="09.00">
					<name>Божественная литургия. 9-й час. Великая вечерня.</name>
				</worship>
			</action>
		</case>
		<default>
			<worship time="17.30" mode="daybefore">
				<name>9-й час. Вечерня. Малое повечерие.</name>
			</worship>
			<worship time="06.00">
				<name>Полуношница. Утреня.</name>
			</worship>
			<worship time="08.00">
				<name>Великие часы. Изобразительны. Великая вечерня. Божественная литургия свт. Василия Великого.</name>
			</worship>
		</default>
	</switch>
</rule>
